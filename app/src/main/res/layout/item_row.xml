<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu_item_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_normal"
    android:paddingTop="@dimen/padding_normal">

    <ImageView
        android:id="@+id/row_icon"
        android:layout_width="@dimen/menu_item_icon_size"
        android:layout_height="@dimen/menu_item_icon_size"
        android:paddingLeft="@dimen/menu_item_padding_left"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_home" />

    <TextView
        android:id="@+id/row_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_xxlarge"
        android:paddingTop="@dimen/padding_normal_large"
        android:text="@string/dummy_text"
        android:textAppearance="?android:attr/textAppearance"
        android:textSize="@dimen/menu_item_txt"
        android:textStyle="bold" />
</LinearLayout>