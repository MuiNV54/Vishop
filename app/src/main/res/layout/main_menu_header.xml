<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_header_height"
    android:background="@drawable/bg_main_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/menu_item_padding_left"
            android:text="Dluffy.hades"
            android:textColor="@color/white"
            android:textSize="@dimen/menu_name_txt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/menu_item_padding_left"
            android:layout_marginTop="@dimen/padding_normal_large"
            android:text="nguyen.van.mui@framgia.com"
            android:textColor="@color/white"
            android:textSize="@dimen/menu_name_txt"
            android:textStyle="bold" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/menu_icon"
        android:layout_width="@dimen/menu_icon_size"
        android:layout_height="@dimen/menu_icon_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/menu_item_padding_left"
        android:src="@mipmap/img_avatar" />
</RelativeLayout>